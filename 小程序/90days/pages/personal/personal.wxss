.user{
	height: 200rpx;
	background: #594E60;
}
.user_img{
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
	margin: 0 40rpx 0 60rpx;
	border:4rpx solid #fff;
}
.user_img image{
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;	
}
.user_details{
	width: 320rpx;
}
.user_name{
	width: 100%;
	color: #fff;
	font-size: 32rpx;
	margin-bottom: 6rpx;
}
.user_id{
	width: 100%;
	color: #fff;
	font-size: 28rpx;
}
.right_icon{
	width: 20rpx;
	height: 32rpx;
	margin-right: 30rpx;
}
.balance{
	background: #696070;
	height: 68rpx;
	padding: 26rpx 0;
}
.balance_item{
	width: 50%;
	box-sizing: border-box;
}
.border_ac{
	border-right:1rpx solid rgba(255,255,255,0.2) 
}
.balance_number{
	font-size: 40rpx;
	color: #fff;
}
.balance_txt{
	font-size: 22rpx;
	color: #fff;
	opacity: 0.7;
}
.adswiper{
	height: 200rpx;
	width: 100%;
}
.adswiper .swiper_img{
	height: 200rpx;
	width: 100%;
}
.function{
	padding: 26rpx 19rpx 6rpx;
}
.function_item{
	margin: 0 12rpx 20rpx;
	background: #fff;
	width: 332rpx;
	height: 180rpx;
	border-radius: 4rpx;
	float: left;
}
.function_item image{
	height: 84rpx;
	width: 84rpx;
}
.function_item text{
	color: #4C4252;
	font-size: 26rpx;
}