.timer_date{
	padding: 24rpx 28rpx;
	display: flex;
	flex-direction: column;
	background: #fff;
	justify-content: center;
	margin-bottom: 20rpx;
}
.timer_date_item{
	display: flex;
	height: 60rpx;
	margin-bottom: 12rpx;
	background: #fff;
	align-items: center;
}
.timer_date_item image{
	margin-right: 28rpx;
	width: 60rpx;
	height: 60rpx;
}
.timer_date_item text{
	color: #4C4252;
	font-size: 30rpx;
	font-weight: 500;
}
.text_item{
	padding: 30rpx;
	background: #fff;
	margin-bottom: 20rpx;
}
.title{
	font-size: 32rpx;
	color: #4C4252;
	margin-bottom: 18rpx;
}
.text_item .des_text{
	font-size: 28rpx;
	color: #717171;
	line-height: 48rpx;
}
.step{
	background: #ECEEF0;
	width: 690rpx;
	height: 72rpx;
	font-size: 30rpx;
	color: #282828;
}
.step text{
	color: #FFB84E;
	margin-right: 8rpx;
}
.down_icon{
	width: 30rpx;
	height: 30rpx;
	margin: 10rpx 0;
}
.step_outer{
	padding-bottom: 20rpx;
}
.step_title{
	margin-bottom: 26rpx;
}
.reserve_btn{
	width: 100%;
	height: 96rpx;
	line-height: 96rpx;
	color: #fff;
	font-size: 36rpx;
	text-align: center;
	background: linear-gradient(120deg,rgba(255,220,132,1) 0%,rgba(255,183,76,1) 100%);
	position: fixed;
	bottom: 0;
	left: 0;
	z-index: 999;
}
.empty{
	height: 96rpx;
}
.course_img_outer{
	position: relative;
	font-size: 0;
}
.course_img{
	width: 750rpx;
	height: 360rpx;
}
.share_btn{
	width: 76rpx;
	height: 76rpx;
	position: absolute;
	bottom: 18rpx;
	right: 22rpx;
}