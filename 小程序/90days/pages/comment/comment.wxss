.comment{
	margin-top: 20rpx;
	background: #fff;
}
.comment_inner{
	background: #fff;

}
.star_box{
	margin: 26rpx 0 48rpx;
	background:#FAFAFA;
	width: 690rpx;
	padding-bottom: 60rpx;	
}
.comment_item{
	margin-top:60rpx;
	height: 42rpx;
	display: flex;
	align-items: center;
}
.comment_item text{
	color: #363636;
	font-size: 22rpx;
	margin-right: 48rpx;
}
.star_icon{
	width: 60rpx;
	height: 60rpx;
	margin-right:28rpx;
}
.textarea_box{
	position: relative;
	margin-bottom: 30rpx;
}
.textarea_box textarea{
	width: 646rpx;
	height: 116rpx;
	border:1px solid #CBCBCB;
	color: #A7A7A7;
	font-size: 32rpx;
	padding: 22rpx 22rpx 86rpx;
	background: #FAFAFA;
}
.textarea_box text{
	position: absolute;
	bottom: 18rpx;
	right: 14rpx;
	color: #8E8E8E;
	font-size: 24rpx;
}
.upload{
	width: 184rpx;
	height: 184rpx;
	border:1px solid #CBCBCB; 
	margin-bottom: 86rpx;
}
.upload_icon{
	width: 60rpx;
	height: 50rpx;
}
.upload_inner text{
	margin-top: 15rpx;
	color: #363636;
	font-size: 24rpx;
}
.upload_photo,.upload_inner{
	width: 100%;
	height: 100%;
}
.upload_btn{
	margin-bottom: 26rpx;
	width: 694rpx;
	height: 84rpx;
	line-height: 84rpx;
	text-align: center;
	color: #fff;
	font-size: 36rpx;
	background: linear-gradient(120deg,rgba(255,220,132,1) 0%,rgba(255,183,76,1) 100%);
	border-radius: 8rpx;
}