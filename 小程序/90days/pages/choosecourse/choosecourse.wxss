.bodyer{
	padding-top: 62rpx;
}
.ipt_item{
	height: 40rpx;
	padding: 22rpx 0;
	width: 544rpx;
	border-radius: 200rpx;
	background: #fff;
	margin-bottom: 20rpx;
}
.ipt_des{
	padding: 0 20rpx 0 38rpx;
	height: 40rpx;
	color: #4C4252;
	font-size: 28rpx;
	border-right: 1px solid #F1F1F1;
	line-height: 40rpx;
}
.ipt_left{
	display: flex;
	align-items: center;
}
.ipt_box{
	padding-left: 22rpx;
	color: #F5A623;
	font-size: 28rpx;
	display: inline-block;
	height: 40rpx;
	width: 260rpx;
}
.right_icon{
	height: 100%;
	display: flex;
	align-items: center;
	padding-right: 45rpx;
	float: right;
