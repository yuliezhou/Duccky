}
.save_btn{
	width: 544rpx;
	height: 84rpx;
	line-height: 84rpx;
	text-align: center;
	color: #fff;
	font-size: 36rpx;
	background: linear-gradient(120deg,rgba(255,220,132,1) 0%,rgba(255,183,76,1) 100%);
	border-radius: 200rpx;
	margin-top: 40rpx;
}
.prompt{
	color: #979797;
	font-size: 24rpx;
