/* pages/movie/movie.wxss */
.movie_des{
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 40rpx 30rpx;
	border-bottom: 2rpx solid #E8E8E8;
}
.movie_desl{
	width: 65%;
}
.movie_desl .movie_desh{
	font-size: 48rpx;
	color: #000;
	width: 100%;
}
.movie_desl .average{
	font-size: 26rpx;
	color: #ffb712;
	width: 100%;
	padding-bottom:25rpx; 
	padding-top: 20rpx;
}
.movie_desl .rating_count{
	color: #aaa;
	padding-left: 15rpx;
}
.movie_img{
	width: 200rpx;
	height: 300rpx;
}
.des_txt{
	color: #494949;
	font-size: 28rpx;
}
.movie_list{
	width: 100%;
	height: 360rpx;
	overflow: hidden;
	padding: 20rpx 0;
	white-space: nowrap;
}
.movie_box{
	width: 200rpx;
	margin: 0 15rpx;
	display: inline-block;
	height: 100%;
    position: relative;
}
.movie_img{
	height: 284rpx;
	display: inline-block;
	width: 100%;
}
.moviebox_tit{
	padding: 10rpx 0;
	text-align: center;
	color: #000;
	overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 25rpx;
}
.scroll_view_x{
    white-space: nowrap;
	overflow: hidden;
	height: 100%;
}
.average{
    position: absolute;
    top: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.6);
    color: #fff;
    font-size: 22rpx;
    text-align: center;
    width: 50rpx;
    height: 30rpx;
    line-height: 30rpx;
    border-radius: 5rpx;
}